{
  "routes": [
    {
      "method": "GET",
      "path": "/carts",
      "handler": "cart.find"
    },
    {
      "method": "GET",
      "path": "/carts/:code",
      "handler": "cart.findOne"
    },
    {
      "method": "POST",
      "path": "/carts",
      "handler": "cart.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/carts/:code/products/:sku/add",
      "handler": "cart.addProduct",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/carts/:code/products/:sku/remove",
      "handler": "cart.removeProduct",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/carts/:code/checkout",
      "handler": "cart.checkout",
      "config": {
        "policies": []
      }
    } 
  ]
}
